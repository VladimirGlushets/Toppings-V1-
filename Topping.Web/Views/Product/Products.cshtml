@model List<Topping.Domain.Models.Product>


@foreach (var product in Model)
{
    <div class="row">
        <div class="col-md-2">
            <a href="@Url.Action("Details", "Product", new {id = product.Id})">@product.Name</a>
        </div>
        <div class="col-md-8">
            @product.ShortDescription
        </div>
        <div class="col-md-2">

        </div>
    </div>
}