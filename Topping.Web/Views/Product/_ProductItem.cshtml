@model Topping.Domain.Models.Product

<a href="@Url.Action("Details", "Product", new {id = Model.Id})">
    <div class="col-md-6 col-sm-12">
        <div class="portlet light ">
            <div class="portlet-title">
                <div class="caption caption-md">
                    <i class="icon-bar-chart theme-font hide"></i>
                    <span class="caption-subject theme-font bold uppercase">@Model.Name</span>
                </div>
            </div>
            <div class="portlet-body">
                <div class="row">
                    <div class="col-md-4">
                        <img src=@Model.ImagePath alt="@Model.Name" width="150" height="150">
                    </div>
                    <div class="col-md-8 group-description-text">
                        @Model.ShortDescription
                    </div>
                </div>
            </div>
        </div>
    </div>
</a>