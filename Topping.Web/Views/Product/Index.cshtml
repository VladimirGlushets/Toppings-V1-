@model List<Topping.Web.Models.GroupViewModel>

@foreach (var group in Model)
{
    <div class="row">
        <div class="col-md-2">
            <img src=@group.ImagePath alt="@group.Name" width="150" height="150">

        </div>
        <div class="col-md-2">
            <a href="@Url.Action("Products", "Product", new {group = group.GroupEnum})">@group.Name</a>
        </div>
        <div class="col-md-8">
            @group.Description
        </div>
    </div>
}
